<html>

<head>
    <title>Sign - In Page</title>
    <link rel="stylesheet" href="signin.css">
</head>

<body>
    <div id="container">
        <div id="left">
            <a  href="/">
                <img id="logo" src="Logo.svg">
                </a>
            <div id="form">
                <div id="signin">
                    <!-- Sign in  -->
                    <form action="/signin-validation" method="post">

                        <div class="int1">
                            <input id="int" type="text" name="name" placeholder="Username" required>
                        </div>
                        <div class="int2"> 
                            <input id="intt" type="text" name="password" placeholder="Password" required>
                        </div>
                        <div id="alert-box1">
                            <% if(locals.Login==1){%> 
                                <p>Wrong Username or Password!!</p>
                            <%}%> 
                        </div>
                        <button type="submit" id="Sin">Sign in</button>
                    </form>
                    
                </div>
                
                <!-- Student Link -->
                <div id="student">
                    <a id="ac" href="/student">
                        Are you a student?
                    </a>
                </div>
            </div>
            <div id="lastline">
                <p>AGNI MONITORING AND ANALYSIS SOFTWARE</p>
            </div>
        </div>


        <div id="right">
            <div id="text">
                <div id="text1">
                    <p id="text1-p1">Best In class Analysis of the system.</p>
                </div>
                <div id="svg">
                    <img id="img2" src="SVG1.svg">
                </div>
            </div>

            <div id="text2">
                <ul id="list">
                    <li>24 x 7 Servalance option</li>
                    <li>Graphical Representation</li>
                    <li>Tabular Representation</li>
                </ul>
            </div>
        </div>
    </div>


    </div>
</body>

</html>